<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kev.projetkevloic.View.row.row_observf">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_observ"
        android:id="@+id/imageView"
        android:layout_alignBottom="@+id/cantonOrnitho"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/nomOrniObserv"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textColor="@android:color/background_light"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="Nom"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView"
        android:layout_marginStart="18dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toRightOf="@+id/imageView"
        android:layout_marginLeft="8dp" />
    <TextView
        android:id="@+id/nomOiseauObserv"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textColor="@android:color/background_light"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="Prenom"
        android:layout_below="@+id/usernameOrnitho"
        android:layout_alignLeft="@+id/usernameOrnitho"
        android:layout_alignStart="@+id/usernameOrnitho"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toRightOf="@+id/nomOrniObserv"
        android:layout_marginLeft="73dp" />
    <TextView
        android:id="@+id/nomTextObserv"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textColor="@android:color/background_light"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="fds"
        android:layout_below="@+id/usernameOrnitho"
        android:layout_alignLeft="@+id/usernameOrnitho"
        android:layout_alignStart="@+id/usernameOrnitho"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toRightOf="@+id/nomOiseauObserv"
        android:layout_marginLeft="53dp" />

</android.support.constraint.ConstraintLayout>

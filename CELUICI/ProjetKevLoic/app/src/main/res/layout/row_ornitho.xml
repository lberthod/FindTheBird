<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    >

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_action_name"
        android:id="@+id/imageView"
        android:layout_alignBottom="@+id/cantonOrnitho" />

    <TextView
        android:id="@+id/usernameOrnitho"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:textColor="@android:color/background_light"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="Nom"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView"
        android:layout_marginStart="18dp" />
    <TextView
        android:id="@+id/cantonOrnitho"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/background_light"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="Prenom"
        android:layout_below="@+id/usernameOrnitho"
        android:layout_alignLeft="@+id/usernameOrnitho"
        android:layout_alignStart="@+id/usernameOrnitho" />

</RelativeLayout>